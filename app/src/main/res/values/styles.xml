        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:ems">10</item>
    </style>
    <style name="editText.et1" parent="editText">
        <item name="android:hint">@string/et1</item>
        <item name="android:inputType">textCapWords|textPersonName</item>
        <item name="android:id">@id/et1</item>
    </style>
    <style name="editText.et2" parent="editText">
        <item name="android:hint">@string/et2</item>
